<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="rootPane" maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="400.0"
            stylesheets="@../css/main.css"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="v.ui.MainWindow">
    <children>
        <!-- Floating Chat Container -->
        <ScrollPane fx:id="scrollPane"
                    fitToWidth="true"
                    hbarPolicy="NEVER"
                    vbarPolicy="AS_NEEDED"
                    pannable="true"
                    styleClass="floating-chat-container"
                    AnchorPane.bottomAnchor="80.0"
                    AnchorPane.leftAnchor="20.0"
                    AnchorPane.rightAnchor="20.0"
                    AnchorPane.topAnchor="20.0">
            <content>
                <VBox fx:id="dialogContainer"
                      prefWidth="360.0"
                      spacing="15.0"
                      styleClass="dialog-container" />
            </content>
        </ScrollPane>
        
        <!-- Floating Command Input Container -->
        <HBox fx:id="commandContainer"
              spacing="12.0"
              styleClass="floating-command-container"
              AnchorPane.bottomAnchor="20.0"
              AnchorPane.leftAnchor="20.0"
              AnchorPane.rightAnchor="20.0">
            <children>
                <TextField fx:id="userInput"
                           onAction="#handleUserInput"
                           prefHeight="50.0"
                           prefWidth="250.0"
                           promptText="Enter your command..."
                           styleClass="floating-input"
                           HBox.hgrow="SOMETIMES" />
                <Button fx:id="sendButton"
                        mnemonicParsing="false"
                        onAction="#handleUserInput"
                        prefHeight="50.0"
                        prefWidth="120.0"
                        styleClass="floating-send-button"
                        text="SEND"
                        HBox.hgrow="NEVER" />
            </children>
        </HBox>
    </children>
</AnchorPane>
